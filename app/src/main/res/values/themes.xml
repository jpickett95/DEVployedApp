<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DEVployedApp" parent="@style/Theme.AppCompat.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_Pistachio</item>
        <item name="colorPrimaryVariant">@color/accent_RussianViolet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_Pistachio</item>
        <item name="colorSecondaryVariant">@color/accent_LightSeaGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.DEVployedApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DEVployedApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DEVployedApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>